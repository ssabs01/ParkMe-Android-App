<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.SettingsFragment">

    <TextView
        android:id="@+id/settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/settings_head"
        android:textColor="@color/login_head"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_security"
        android:layout_width="127dp"
        android:layout_height="66dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="140dp"
        android:layout_weight="0.5"
        android:src="@drawable/img_security"
        app:layout_constraintEnd_toEndOf="@+id/settings_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <ImageView
        android:id="@+id/imageView_contact_authority"
        android:layout_width="127dp"
        android:layout_height="67dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="140dp"
        android:layout_weight="0.5"
        android:src="@drawable/contact"
        app:layout_constraintEnd_toEndOf="@+id/settings_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <ImageView
        android:id="@+id/imageView_privacy"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="140dp"
        android:layout_weight="0.5"
        android:src="@drawable/privacy"
        app:layout_constraintEnd_toEndOf="@+id/settings_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Privacy"
        android:textColor="@color/login_head"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="Change Password"
        android:textColor="@color/login_head"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/settings_header"
        app:layout_constraintStart_toEndOf="@+id/imageView_security"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="248dp"
        android:gravity="center"
        android:text="Contact Authority"
        android:textColor="@color/login_head"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/settings_header"
        app:layout_constraintStart_toEndOf="@+id/imageView_contact_authority"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <ImageView
        android:id="@+id/imageView_about_app"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="140dp"
        android:layout_weight="0.5"
        android:src="@drawable/img_about"
        app:layout_constraintEnd_toEndOf="@+id/settings_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="346dp"
        android:gravity="center"
        android:text="About"
        android:textColor="@color/login_head"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/settings_header" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EF7272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_about_app" />


</androidx.constraintlayout.widget.ConstraintLayout>